{
  "name": "mendly-root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:app\"",
    "dev:server": "cross-env PYTHONPATH=. .venv\\Scripts\\python.exe -m uvicorn server.main:app --reload",
    "dev:client": "cd react-app && npm run dev",
    "dev:app": ".venv\\Scripts\\python.exe mobile_shell.py",
    "start": "npm run start:server",
    "start:server": "cross-env PYTHONPATH=. .venv\\Scripts\\python.exe -m uvicorn server.main:app --host 0.0.0.0 --port 8000"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "ffmpeg": "^0.0.4"
  }
}
